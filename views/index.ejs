<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Comidas por Países</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background-color: #f3f3f3;
    }
    h1 {
      text-align: center;
      margin-bottom: 40px;
    }
    .bandeiras {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 30px;
    }
    .card-bandeira {
      text-align: center;
      cursor: pointer;
      transition: transform 0.2s;
    }
    .card-bandeira:hover {
      transform: scale(1.05);
    }
    .card-bandeira img {
      width: 120px;
      height: 80px;
      object-fit: contain;
      border-radius: 8px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }
    .nome-pais {
      margin-top: 8px;
      font-weight: bold;
      color: #333;
    }
  </style>
</head>
<body>
  <h1>Comidas por Países</h1>
  <div class="bandeiras">
    <% countries.forEach(pais => { %>
      <div class="card-bandeira">
        <a href="/pais/<%= pais.nome %>">
          <img src="<%= pais.img %>" alt="Bandeira de <%= pais.nome %>">
          <div class="nome-pais"><%= pais.nome %></div>
        </a>
      </div>
    <% }) %>
  </div>
</body>
</html>
