<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Comidas típicas de <%= pais.charAt(0).toUpperCase() + pais.slice(1) %></title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f3f3f3;
      padding: 40px;
      text-align: center;
    }

    h1 {
      margin-bottom: 30px;
    }

    .grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
      justify-items: center;
    }

    .card {
      background-color: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      width: 100%;
      max-width: 300px;
    }

    .card img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .card h3 {
      margin: 10px 0;
    }

    .card p {
      margin: 4px 0;
      color: #555;
    }
  </style>
</head>
<body>
  <h1>Comidas típicas de <%= pais.charAt(0).toUpperCase() + pais.slice(1) %></h1>
  <div class="grid">
    <% foods.forEach(comida => { %>
      <div class="card">
        <img src="<%= comida.img %>" alt="<%= comida.name %>">
        <h3><%= comida.name %></h3>
        <p><%= comida.description %></p>
        <p><strong>R$ <%= comida.price.toFixed(2) %></strong></p>
      </div>
    <% }) %>
  </div>
</body>
</html>
